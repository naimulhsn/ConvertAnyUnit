<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorOffWhite"
    tools:context=".Time">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Unit"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/id_spinner_time"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/id_input_time"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:inputType="numberDecimal"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Millisecond(ms)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_millisecond"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Second(s)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_second"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Minute(min)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_minute"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hour(hr)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_hour"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Day(d)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_day"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Week(wk)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_week"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Month(mon)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_month"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <!--Row-->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:weightSum="4">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Year(y)"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/id_year"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.564545"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>